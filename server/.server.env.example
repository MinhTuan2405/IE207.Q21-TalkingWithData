# ============================================
# FastAPI Server - PostgreSQL Database
# ============================================
# Database: talkwdata_db (server data: auth, conversations, messages, etc.)
# User: talkwdata_user
# Format: postgresql://username:password@hostname:port/database

DATABASE_URL=postgresql://talkwdata_user:talkwdata_pass@postgres:5432/talkwdata_db

# ============================================
# Server Configuration
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# JWT & Security Configuration
SECRET_KEY=your-secret-key-change-in-production-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Ollama AI Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_DEFAULT_MODEL=llama3.2

# Qdrant Vector Database Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# CORS Settings
ALLOWED_ORIGINS=*
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# Application Settings
APP_NAME=TalkWithData API
DEBUG=False
ENVIRONMENT=production
